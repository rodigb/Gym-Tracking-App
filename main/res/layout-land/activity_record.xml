<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".RecordActivity">

    <Button
        android:id="@+id/button_remind2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="173dp"
        android:layout_marginLeft="173dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="29dp"
        android:text="REMINDER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewR2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewR2"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginEnd="189dp"
        android:layout_marginRight="189dp"
        android:layout_marginBottom="44dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_delete"
        app:layout_constraintStart_toEndOf="@+id/button_remind2" />

    <EditText
        android:id="@+id/editText_bench"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="190dp"
        android:layout_marginRight="190dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_squat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/editText_bench"
        app:layout_constraintTop_toBottomOf="@+id/editText_bench" />

    <EditText
        android:id="@+id/editText_deadlift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/editText_squat"
        app:layout_constraintTop_toBottomOf="@+id/editText_squat" />

    <TextView
        android:id="@+id/benchlbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="17dp"
        android:text="Bench Press (KG)"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/editText_bench"
        app:layout_constraintEnd_toStartOf="@+id/editText_bench"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/squatslbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Squat (KG)"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/benchlbl"
        app:layout_constraintTop_toBottomOf="@+id/benchlbl" />

    <TextView
        android:id="@+id/Deadliftslbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Deadlift (KG)"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/Idlbl"
        app:layout_constraintStart_toStartOf="@+id/squatslbl" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="35dp"
        android:background="@drawable/gradient1"

        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:text="Save"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button_remind2"
        app:layout_constraintEnd_toEndOf="@+id/button_remind2" />

    <Button
        android:id="@+id/button_viewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/gradient1"
        android:shadowColor="#A8A8A8"
        android:text="View"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/textViewR2"
        app:layout_constraintTop_toBottomOf="@+id/editText_Id" />

    <TextView
        android:id="@+id/Idlbl"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_centerHorizontal="true"


        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="Week"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/editText_Id"
        app:layout_constraintEnd_toEndOf="@+id/Deadliftslbl"
        app:layout_constraintStart_toStartOf="@+id/Deadliftslbl"
        app:layout_constraintTop_toTopOf="@+id/editText_Id" />

    <EditText
        android:id="@+id/editText_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/editText_deadlift"
        app:layout_constraintTop_toBottomOf="@+id/editText_deadlift" />

    <Button
        android:id="@+id/button_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="18dp"

        android:layout_marginLeft="18dp"

        android:background="@drawable/gradient1"
        android:shadowColor="#A8A8A8"
        android:text="Update"
        android:textColor="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_viewAll"
        app:layout_constraintStart_toStartOf="@+id/textViewR2" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:text="Delete"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewR2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[1]" />

</android.support.constraint.ConstraintLayout>